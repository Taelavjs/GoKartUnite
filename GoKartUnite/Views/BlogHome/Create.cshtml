@model GoKartUnite.ViewModel.BlogPostView

<div class="w-100">
    <div class="w-100">
        <form id="blogPostForm" data-ajax="true" data-ajax-method="POST" data-ajax-update="#response" data-ajax-mode="replace">
            @Html.AntiForgeryToken()

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-2">
                <input asp-for="Title" class="form-control form-control-lg" placeholder="Enter Title" id="Title" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="form-group mb-2">
                <textarea asp-for="Description" class="form-control" rows="5" placeholder="Enter Description" id="Description"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group d-flex justify-content-center align-items-center gap-3 h-100 p-2">
                <select id="TaggedTrackTitle" name="TaggedTrackTitle" class="form-control">
                    <option value="">-- Select Track --</option>
                    @foreach (var item in ViewBag.AllTracks)
                    {
                        <option value="@item.Title">@item.Title</option>
                    }
                </select>

                <button type="button" id="createPostBtn" class="btn btn-primary">Create</button>
            </div>
        </form>

        <div id="response"></div> <!-- Place to show AJAX response -->
    </div>
</div>
