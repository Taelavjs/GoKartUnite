@model GoKartUnite.ViewModel.GroupHomeView
<div class="d-flex flex-column"> @* 2 Columsn, With 1 Centered, One immediately right*@
    <div class="d-flex flex-column w-75 m-auto">
        <div class="w-100">@Model.Group.Name</div>
        <div class="w-100">@Model.Group.Description</div>
        <div class="d-flex justify-content-around flex-row w-100">
            <div>Member Count : @Model.Group.MemberCount</div>
            <div>Owner : @Model.Group.CreatorName</div>
        </div>
    </div>
    <div class="w-100">
        @foreach(var message in Model.Group.Comments){
            <div>@message.MessageContent</div>
        }
    </div>

    <div class="w-100">
        @foreach (var member in Model.Members)
        {
            <div>@member.Name</div>
        }
    </div>
</div>