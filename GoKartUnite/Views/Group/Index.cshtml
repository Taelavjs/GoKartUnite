@model GoKartUnite.ViewModel.GroupPageView

<div class="container d-flex flex-col">

        <form id="createGroupForm" asp-action="CreateGroup" method="post">
            @Html.AntiForgeryToken()

            <input asp-for="PostageGroup.Name" class="form-control form-control-lg" placeholder="Enter Group Name" />
            <span asp-validation-for="PostageGroup.Name" class="text-danger"></span>

            <textarea asp-for="PostageGroup.Description" class="form-control form-control-sm border-0 shadow-sm w-100"
                      placeholder="Write A Description" rows="3"></textarea>
            <span asp-validation-for="PostageGroup.Description" class="text-danger"></span>

            <input type="submit" class="mb-2 btn btn-primary" />
        </form>

        <div class="row mt-2 mb-4">
            <div class="input-group mb-3">
                <input type="text" class="form-control" id="SearchGroupsInput" placeholder="Search Groups" aria-label="Search Groups">
                <button class="btn btn-outline-secondary" type="button" id="search-button">Search</button>
            </div>
            <div class="d-flex justify-content-end mb-3">
                <select id="GroupListSelector" class="form-select w-auto">
                    <option value="Name">Name</option>
                    <option value="Date">Date Created</option>
                    <option value="MemberCount">Number of Members</option>
                </select>
            </div>

            <div class="card" id="GroupListContent">
                @await Html.PartialAsync("_groupSingular", Model.Groups);
            </div>
        </div>
    </div>

@section Scripts{
    <script src="~/js/GroupContent/GroupListPage.js" asp-append-version="true"></script>
    <script src="~/js/ProfileHover.js" asp-append-version="true"></script>
}

