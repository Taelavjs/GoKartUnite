@model int
<template id="comment-template">
    <div class="comment-item p-2 border-bottom rounded text-wrap">
        <div class="d-flex justify-content-between align-items-center">
            <div class="fw-bold text-primary small comment-author"></div>
            <div class="text-secondary small comment-date"></div>
        </div>
        <div class="text-muted small mt-1 text-wrap text-break comment-text"></div>
    </div>
</template>


<div class="comment-section mt-2 comment-section-@Model"></div>
