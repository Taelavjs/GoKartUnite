@{
}

@using Microsoft.AspNetCore.Http.Extensions;
@using GoKartUnite.ViewModel

@model GoKartUnite.ViewModel.TrackView

        <div class="blog-post TrackContainer">
            <div class="blog-post-title">@Model.Title</div>
            <div class="blog-post-description">@Model.Description</div>
            <div class="blog-post-description right">@Model.karters <a asp-controller="TrackHome" asp-action="FilteredKarterIndex" asp-route-track="@Model.Title">Local Karters</a></div>
            <div class="blog-post-description right">@Model.blogPosts <a asp-controller="TrackHome" asp-action="FilteredIndex" asp-route-track="@Model.Title">Posts</a> </div>
            <div class="blog-post-description right"><a asp-controller="FollowTrack" asp-action="Index" asp-route-track="@Model.Title" asp-route-fullUrl="@ViewContext.HttpContext.Request.GetDisplayUrl()">
                @(Model.isFollowed == false ? "Follow" : "Following") 
            </a> </div>
        </div>