@using GoKartUnite.ViewModel

@model GoKartUnite.ViewModel.BlogPostView

<div class="blog-post">
    <div class="blog-post-title d-flex justify-content-between align-items-end">@Model.Title 
        @if(User.IsInRole("Admin")){
            <a asp-action="Create" asp-route-id="@Model.Id"><i class="bi bi-pencil-square fs-4"></i></a>
        }
    </div>
    <div class="blog-post-author">By: @Model.Author?.Name</div>
    <div class="blog-post-description">@Model.Description</div>
    @if (!string.IsNullOrWhiteSpace(@Model.TaggedTrack?.Title))
    {
            <div class="blog-post-description">@Model.TaggedTrack.Title</div>
    }
    <div class="blog-post-upvotes w-100 d-flex justify-content-between align-items-end">
        <span><i class="bi bi-chevron-up"></i> @Model.Upvotes</span>
        <button
            type="button"
            class="upvote-btn"
            data-id="@Model.Id"
            data-upvoteCount="@Model.Upvotes">
            <i class="bi bi-hand-thumbs-up-fill"></i>
        </button>
    </div>
</div>
