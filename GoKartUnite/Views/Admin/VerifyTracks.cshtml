@{
}
<link rel="stylesheet" href="~/css/Blog.css" asp-append-version="true" />

@model List<GoKartUnite.Models.Track>
<div class="container">

    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Location</th>
                <th>Date Added</th>
                <th>Places Id</th>
                <th>Options</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var track in Model)
            {
                @await Html.PartialAsync("_AdminTrackToVerify", track)

            }

        </tbody>
    </table>


</div>

@section Scripts {
    <script src="~/js/Admin/VerifyTracks.js" asp-append-version="true"></script>
}